<div class="three wide column">
  <%= render 'admin/base/nav_users' %>
</div>

<div class="thirteen wide column">

  <div class="ui top attached menu borderless">
    <div class="item"><strong>角色列表</strong></div>
    <div class="right menu">
      <div class="item"><%= link_to '新建', new_admin_who_path, class: 'ui teal button' %></div>
    </div>
  </div>

  <table class="ui table">
    <thead>
    <tr>
      <th>任务ID</th>
      <th>名称</th>
      <th>包含权限</th>
      <th>编辑</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @whos.each do |who| %>
      <tr>
        <td><%= who.id %></td>
        <td><%= who.name %></td>
        <td>
          <% who.roles.each do |role| %>
            <div class="ui teal label"><%= role.name %></div>
          <% end %>
        </td>
        <td><%= link_to '编辑', edit_admin_who_path(who) %></td>
        <td><%= link_to '删除', admin_who_path(who), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>