<tr id="tr_<%= section.id %>">
  <td class="three wide">
    <%= section.desc %>
    <%= link_to move_higher_admin_section_path(section), method: :patch do %>
      <i class="arrow up icon"></i>
    <% end %>
    <%= link_to move_lower_admin_section_path(section), method: :patch do %>
      <i class="arrow down icon"></i>
    <% end %>
  </td>
  <td class="ui labels ten wide">
    <% section.rules.each do |rule| %>
      <div class="ui label">
        <%= rule.desc %>
        <%= link_to roles_admin_section_rule_path(section, rule), remote: true, id: "roles_#{rule.id}" do %>
          <i class="users icon"></i>
        <% end %>
        <%= link_to edit_admin_section_rule_path(section, rule) do %>
          <i class="write icon"></i>
        <% end %>
        <%= link_to admin_section_rule_path(section, rule), method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="remove icon"></i>
        <% end %>
      </div>
    <% end %>
  </td>
  <td class="three wide">
    <%= link_to '新建rule', new_admin_section_rule_path(section), class: 'ui teal mini button' %>
    <%= link_to '更新rule', sync_admin_section_rules_path(section), method: :patch, class: 'ui pink mini button' %>
    <%= link_to '编辑', edit_admin_section_path(section), class: 'ui red mini button' %>
    <%= link_to '删除', admin_section_path(section), method: :delete, class: 'ui mini red button', data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
