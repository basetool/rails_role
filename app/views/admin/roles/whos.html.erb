<div class="three wide column">
  <div class="ui menu vertical fluid">
    <div class="item">
      <span>角色列表</span>
      <div class="menu">
        <% Role.all.each do |role| %>
          <%= link_to role.name, whos_admin_role_path(role), class: active_page(id: role.id) %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="thirteen wide column">

  <div class="ui top attached menu borderless">
    <%= link_to '权限列表', admin_role_path(@role), class: 'item' %>
    <div class="item">
      <strong>角色列表</strong>
    </div>
  </div>

	<div class="ui segment top attached">
		<%= link_to '新建', new_admin_role_path, class: 'ui teal button' %>
	</div>

  <table class="ui bottom attached table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @whos.each do |who| %>
      <tr>
        <td><%= who.id %></td>
        <td><%= who.name %></td>
        <td><%= link_to '删除', who_admin_role_path(@role, who), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>